      </div>
    </div>
  </section>

  <!-- POSTS -->
<section id="posts">
    <div class="container" style="background-image:url(img/dif2.png)">
        <div class="row">
            <div class="col-md-12">
        <form method="post" action="/actualizar" enctype="multipart/form-data">
        
            <input value="<%= producto.idProduct %>" name="id" type="hidden">
            <div class="row">
              <div class="col-md-5"></div>
            <div class="col-md-3">
                <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el nombre del producto a registrar (Máximo X caracteres)">
                  <h6 class="">Nombre: <i class="fas fa-info-circle"></i></h6>
                </button>
            </div>
              <div class="col-md-4"></div>
            </div>
              
            <div class="form-group">
              <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nameProduct %>">
            </div>

            <div class="form-group">
            <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el precio del producto con pesos y decimales ($ 0.00 MXN)">
                <h6 class="">Precio: <i class="fas fa-info-circle"></i></h6>
            </button>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="..." name="precio" value="<%= producto.priceProduct %>" >
            </div>
              
            <div class="row">
              <div class="col-md-4">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la cantidad del producto en enteros (1 pieza)">
                  <h6 class="">Tiempo de entrega: <i class="fas fa-info-circle"></i></h6>
                  </button>
                  
                  <div class="form-group">
                  <input type="number" class="form-control" id="formGroupExampleInput" placeholder="..." name="tiempo" value="<%= producto.time %>">
                  </div>
            </div>

            <div class="col-md-4">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el minimo de los productos que deben estar en existencia en enteros (1 pieza)">
                  <h6 class="">Minimo: <i class="fas fa-info-circle"></i></h6>
                  </button>
                
                  <div class="form-group">
                  <input type="number" class="form-control" id="formGroupExampleInput" placeholder="..." name="min" value="<%= producto.min %>">
                  </div>
            </div>

              <div class="col-md-4">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa el maximo de productos que pueden estar en existencia en enteros (1 pieza)">
                  <h6 class="">Máximo: <i class="fas fa-info-circle"></i></h6>
                  </button>

                  <div class="form-group">
                  <input type="number" class="form-control" id="formGroupExampleInput" placeholder="..." name="max" value="<%= producto.max %>">
                  </div>
              </div>
            </div>  
              

            <div class="form-group">
              <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la linea del producto a la que pertenece">
                  <h6 class="">Linea de producto: <i class="fas fa-info-circle"></i></h6>
              </button>

              <select class="form-control" id="categoria" name="categoria" value="<%= producto.idCategory %>">
                <% if(producto.idCategory == 2){ %>
                    <option value="2" aria-selected="true" disabled selected >Foto Libros</option>        
                <% } else{ %>  
                  <option value="2">Foto Libros</option>
                <% } %>
                <% if(producto.idCategory == 3){ %>
                  <option value="2" aria-selected="true" disabled selected>Foto Marcos</option>        
              <% } else{ %>  
                <option value="3">Foto Marcos</option>
              <% } %>
              <% if(producto.idCategory == 1){ %>
                <option value="1" aria-selected="true" disabled selected>Foto Regalos</option>        
            <% } else{ %>  
              <option value="1">Foto Regalos</option>
            <% } %>
             </select>
            </div>

            <div class="form-group">
              <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la linea del producto a la que pertenece">
                  <h6 class="">Hay en almacén: <i class="fas fa-info-circle"></i></h6>
              </button>

              <select class="form-control" id="exist" name="exist" value="<%= producto.enableProduct %>">
                <% if(producto.enableProduct == 1){ %>
                    <option value="true" aria-selected="true" disabled selected>Sí</option>        
                    <option value="false">No</option>
                <% } else{ %>  
                  <option value="true" >Sí</option>        
                    <option value="false" aria-selected="true" disabled selected>No</option>
                <% } %>
             </select>
            </div>

              <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Sube la imagen del producto (Max 5mb)">
                  <h6 class="">Imagen: <i class="fas fa-info-circle"></i></h6>
              </button>
              <input value="<%= producto.imageProduct %>" name="imagen" type="hidden">
              <div class="custom-file">
                <label>Actual: <%= producto.imageProduct %></label>
                <br>
                <input type="file" name="file">
              </div>
              
              
              <div class="form-group">
                  <button type="button" class="btn btn-light" data-toggle="tooltip" data-placement="right" title="Ingresa la linea del producto a la que pertenece">
                      <h6 class="">Dimensiones: <i class="fas fa-info-circle"></i></h6>
                  </button>
                  <select class="form-control" id="dimen" name="dimen" value="<%= producto.idDimension %>">
                      <% if(producto.idDimension == 1){ %>
                        <option value="1" aria-selected="true">25 X 15</option>        
                    <% } else{ %>  
                      <option value="1">25 X 15</option>
                    <% } %>
                    <% if(producto.idDimension == 2){ %>
                        <option value="2" aria-selected="true">15 X 15</option>        
                    <% } else{ %>  
                      <option value="2">15 X 15</option>
                    <% } %>
                  </select>
                </div>

              <div class="form-group">
                <button type="button" class="btn btn-light mt-2" data-toggle="tooltip" data-placement="right" title="Ingresa la descripcion del producto, caracteristicas principales, datos significativos.">
                  <h6 class="">Descripción: <i class="fas fa-info-circle"></i></h6>
                </button>
                <textarea class="form-control" rows="3" id="comment" name="comment"><%= producto.featuresProduct %></textarea>
              </div>

              <div class="form-group"> 
                  <button class="btn btn-success pl-5 pr-5 mt-4" data-dismiss="" data-toggle="tooltip" data-placement="right" title="Guarda todos los cambios de este producto"><i class="fas fa-check-circle"></i> Guardar</button> 
              </div>

          </form>
                
            
            </div>
        </div>
    </div>
</section>
    <!-- Modal para confirmar eliminacion -->    
<div class="modal fade" id="modconfirmar">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title">Seguro que desea eliminar el siguiente producto?</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h4><%= producto.nameProduct %></h4>
            <div class="form-group"> 
                <a href="/eliminar/<%= producto.idProduct %>" class="btn btn-danger">
                 Si
                </a>
                <a  class="btn btn-danger" data-dismiss="modal" style="color: white;">
                   No
                  </a>
                 </div>
        </div>
       
        </div>
      </div>
    </div>

